<?xml version="1.0"?>
<openerp>
    <data>

    <!-- Adding Voucher fields to the Salary Rules -->

        <record id="hr_salary_rule_form_voucher" model="ir.ui.view">
            <field name="name">hr.salary.rule.form.voucher</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll_account.hr_salary_rule_form_inherit"/>
            <field name="arch" type="xml">
              <xpath expr="/form/notebook/page[@string='Accounting']" position="replace">
                    <page string="Accounting">
                        <group>
                            <group>
                                <field name="account_debit" />
                                <field name="account_credit"/>
                                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                <field name="account_tax_id"/>
                            </group>
                            <group>
                                <field name="make_voucher" />
                                <field name="bank_id"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    <record id="hr_payslip_confirm_view" model="ir.ui.view">
        <field name="name">hr.payslip.confirm.form</field>
        <field name="model">hr.payslip.confirm</field>
        <field name="arch" type="xml">
            <form string="Voucher Date" version="7.0">
                <p>The Date you want the vouchers to be issue on</p>
                <group>
                  <field name="voucher_date" />
                </group>
                <footer>
                    <button string="Confirm Payslips" name="confirm_slips" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

        <act_window id="action_hr_payslip_confirm"
            multi="True"
            key2="client_action_multi" name="Confirm Selected Payslips"
            res_model="hr.payslip.confirm" src_model="hr.payslip"
            view_mode="form" target="new" view_type="form" />


    </data>
</openerp>
